view,
text {
  box-sizing: border-box;
}

page {
  --themeColor: #BDA066;
  --globalColor: #1a1b1c;
  --focusColor: #4c4d4e;
  --descColor: #7e8081;
  --greyColor: #8e8e8e;
  --subColor: #b1b2b3;
  --lightColor: #e4e4e4;
  --globalBgColor1: #e3e4e5;
  --globalBgColor2: #f6f7f8;
  --globalBgColor3: #ffffff;
}

.about_header {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.about_header .en {
  font-size: 86rpx;
  font-weight: 900;
  color: rgba(26, 27, 28, .15);
  text-transform: uppercase;
}

.about_header .cn {
  font-size: 56rpx;
  font-weight: 900;
  color: #1a1b1c;
  transform: translateY(-60rpx);
}

.about_header .line {
  width: 100rpx;
  background-color: #1a1b1c;
  height: 5rpx;
  opacity: .6;
  margin: 0 auto;
  transform: translateY(-20rpx);
}
